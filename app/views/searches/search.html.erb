<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時-->
  <% if @range == "User" %>
  <h2>Users search for "<%= @search_word %>"</h2>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td>
          <%= link_to user_path(user) do %>
          <%= user.name %>
          <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
  <% else %>
  <!--検索対象モデルがUserではない時（＝検索対象モデルがBookの時）-->
  <h2>Books search for "<%= @search_word %>"</h2>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
        <td>
          <%= link_to book_path(book) do %>
          <%= book.title %>
          <% end %>
          </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>